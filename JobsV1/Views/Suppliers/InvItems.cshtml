@model IEnumerable<JobsV1.Models.SupplierInvItem>

@{
    ViewBag.Title = "InvItems";
}

<h2>InvItems</h2>

<p>
    @Html.ActionLink("Add", "AddItem")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Supplier.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvItem.ItemCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvItem.ItemCode)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteItem", new { id=item.Id })
        </td>
    </tr>
}

</table>
