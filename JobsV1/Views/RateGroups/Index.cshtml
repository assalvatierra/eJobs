@model IEnumerable<JobsV1.Models.RateGroup>

@{
    ViewBag.Title = "Group Rates";
}

<h2>Group Rates</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>

        <td>
            @{var group = item.CarRateGroups.Where(p => p.RateGroupId == item.Id).ToList();
                foreach (var package in group)
                {
                    <text>
                    @package.CarRatePackage.Description.ToString()
                    <br />
                    </text>
                }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Group List", "CarRateGroupList", new { rateGroupId = item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Home", "Index", "Home", null, null) |
    @Html.ActionLink("Packages", "Index", "CarRatePackages", new { isActive = 1 }, null) |
    @Html.ActionLink("Unit Package Rates", "Index", "CarRateUnitPackages", new { isActive = 1 }, null) |
    @Html.ActionLink("Unit Rates", "Index", "CarRates", null, null)  |
    Groups
    
</p>