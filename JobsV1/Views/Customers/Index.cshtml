@model IEnumerable<JobsV1.Models.CostumerDetails >

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    
    <tr>
        <th>
            Customer
        </th>

        <th>
            Category
        </th>

        <th>
            Company
        </th>

        <th>
            Jobs
        </th>

        <th>
            Actions
        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                <p>
                    <a href="mailto:@item.Email">@Html.DisplayFor(modelItem => item.Email)</a>
                </p>
                <p>
                    <a href="tel:@item.Contact1">@Html.DisplayFor(modelItem => item.Contact1)</a>
                    <a href="tel:@item.Contact2">@Html.DisplayFor(modelItem => item.Contact2)</a>
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Remarks)
                    @Html.DisplayFor(modelItem => item.Status)
                </p>
            </td>
            <td>
                <p>
                    @Html.DisplayFor(modelItem => item.CustCategoryIcon)
                </p>

            </td>
            <td>
                <p>
                    @Html.DisplayFor(modelItem => item.CustEntName)
                </p>
            </td>

            <td>
                <p>
                    @Html.DisplayFor(modelItem => item.JobID )
                </p>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

