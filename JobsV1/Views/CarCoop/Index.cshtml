@model IEnumerable<JobsV1.Models.CarUnit>

@{
    //ViewBag.Title = "Car Rental Davao";
    ViewBag.data = 1;
}

<style>
    .bg-gradient-3 {
        background-color: dodgerblue;
        width:110%;
        margin-left:-60px;


    }
    .height-lg-60 {
       min-height: 60vh;
    }

    .jumbotron-banner{
        background-image:url('/Images/POTTMPC/POTTMPCBanner2.png');
        background-position:center;
        background-repeat:no-repeat;
        background-size:100%;
        height:450px;
        min-width:400px;
    }

    
</style>

<div class="jumbotron row jumbotron-banner" >
    <div class="col-md-5">
        <h2>Welcome to Palawan!</h2>
        <p class="lead">Start your journey with us.</p>
        @Html.ActionLink("Contact us", "Contact", "CarCoop", null, new { @class = "btn btn-primary btn-lg" })

        @Html.ActionLink("Reservation", "CarReserve", "CarCoop", new { id = 1 }, new { @class = "btn btn-primary btn-lg" })
    </div>

    <div class="col-md-5">

    </div>

    <div class="col-md-2">

    </div>

</div>


<div class="row car-home-list">
    @foreach (var item in Model)
    {

        <div class="col-md-4 car-primary">
            <h2>@Html.DisplayFor(modelItem => item.Description)</h2>
            <div style="background-image:url('/CarRental/MainImage/@Html.DisplayFor(modelItem => item.Id)');background-position:center;background-repeat:no-repeat;background-size:200px;height:180px;">
                <p>&nbsp</p>
            </div>

            <div>
                <table>
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.Remarks)  &nbsp;
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @Html.Action("CarRate", new { unitid = int.Parse(@Html.DisplayFor(modelItem => item.Id).ToString()) })
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
</div>

<hr />

<div class="row">
        @{Html.RenderPartial("Partial_content_1");}
</div>

<section class="row bg-gradient-3" style="margin-bottom:-20px;padding:80px;">
    <div class="row">
        <div class="col-lg-4" style="color:white;">
            <h3>Main Office:</h3>
            <div class="row">
                <div class="col-lg-2">
                    <img src="~/Images/POTTMPC/icons/marker-100.png" width="60" style="margin-top:10px;" />
                </div>
                <div class="col-lg-6">
                    <h4>
                        3rd floor right wing
                        City Colliseum
                        Puerto Princesa City
                    </h4>
                </div>
            </div>
        </div>

        <div class="col-lg-4" style="color:white;font-size:15px;">
            <ul style="list-style:none;color:lightgray;"> 
                <li style="color:white;">
                    <h3> Company</h3>
                </li>
                <li>
                    <h4> <a href="../CarCoop/" style="color:lightgray"> Home </a></h4>
                </li>
                <li>
                    <h4> <a href="../CarCoop/About" style="color:lightgray"> About </a></h4>
                </li>
                <li>
                    <h4> <a href="../CarCoop/Contact" style="color:lightgray"> Contact </a></h4>
                </li>
            </ul>
        </div>
        <div class="col-lg-4" style="margin-top:1px;">
            <h3 style="color:white"> Social Media</h3>
            <a href="https://web.facebook.com/POTTMPC/" target="_blank" style="padding-right:10px;"><img src="~/Images/POTTMPC/icons/facebook-f-48.png" width="40" /> </a>
            <a style="padding:10px;"><img src="~/Images/POTTMPC/icons/twitter-48.png" width="40" /> </a>
            <a style="padding:10px;"><img src="~/Images/POTTMPC/icons/gmail-48.png" width="40" /> </a>
            <a style="padding:10px;"><img src="~/Images/POTTMPC/icons/google-plus-48.png" width="40" /> </a>
        </div>
    </div>

</section>

