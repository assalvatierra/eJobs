@model IEnumerable<JobsV1.Models.EmailBlasterTemplate>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Customer List", "Index", "Customers") |
    @Html.ActionLink("Blast Results", "BlastResult", new { reportId = 0 , sDate = "today", eDate = "today"}) |
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="text-align:center;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmailCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipientsCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailBody)
        </th>
        <th>
            Picture
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmailCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecipientsCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentPicture)
        </td>
        <td>
            @Html.ActionLink("Send", "SendEmailBlast", new { id = item.Id }, new { @class="btn btn-default", @onclick= "LoadOverlay()" }) 
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<script>

    function LoadOverlay() {
        $("#overlay2").css("display", "flex");
    }

</script>
