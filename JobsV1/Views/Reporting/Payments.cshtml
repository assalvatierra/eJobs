<table>
    <tr>
        <td valign="top">
            <img src="~/Images/LOGO_AJRENTACAR.jpg" width="135" />
        </td>
        <td>
            <span style="font:bold 21px arial, verdana;">AJ88 Car Rental Services </span>
            <span style="font:12px arial, verdana;color:royalblue">
                <br />2nd Floor J. Sulit Bldg. Mac Arthur Highway, Matina Davao City
                <br />Tel# (+63)822971831; (+63)9167558473; (+63)9330895358
                <br />Email: ajdavao88@gmail.com; Website: http://www.AJDavaoCarRental.com/
                <br />TIN: 414-880-772-001 (non-Vat)
            </span>
        </td>
    </tr>
</table>
<h3>
    <h3>       
         Payments Listing Report:
    </h3>
    <p>Date: <b>@ViewBag.sDate</b> to <b>@ViewBag.eDate</b></p> 
</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DtPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentAmt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobMain.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank.BankName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DtPayment)
        </td>
        <td>
            @string.Format("{0:N}", @item.PaymentAmt )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobMain.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank.BankName)
        </td>
    </tr>
}

</table>
