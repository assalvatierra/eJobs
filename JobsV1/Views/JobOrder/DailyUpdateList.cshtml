@model IEnumerable<JobsV1.Models.DailyUpdate>

@{
    ViewBag.Title = "DailyUpdateList";
}

<h2>DailyUpdateList</h2>
<table class="table">

@foreach (var item in Model)
{
    <tr class="daily-update-row">
        <td style="padding:14px;">
            [ 
            @if (item.StatusCategory == "New JobOrder")
            {
                @Html.ActionLink(item.refId.ToString(), "JobServices", "JobOrder",new { jobMainId = item.refId },null)
            }
            else if (item.StatusCategory == "SalesLead Activity")
            {
                @Html.DisplayFor(modelItem => item.refId)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.refId)
            }
            
            ]
            <span class="daily-update-data-status">
                @Html.DisplayFor(modelItem => item.StatusCategory)
            </span>
            <span >
                @Html.DisplayFor(modelItem => item.Details)
            </span>
            <br />
            <span class="daily-update-data-date" >
                @Html.DisplayFor(modelItem => item.dtTaken)
            </span>
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Home", "Index","Home")
</p>
