<div class="section">
    <span>Inventory </span>
    <span>&#187;</span>
    <span>
        @Html.ActionLink("Edit List", "InventoryItemList", new { serviceId = @SvcId })
    </span>

    <div style="padding-left:1.5em;">

        @foreach (var item in Model)
        {
            <div>
                @Html.DisplayFor(modelItem => item.InvItem.ItemCode)
