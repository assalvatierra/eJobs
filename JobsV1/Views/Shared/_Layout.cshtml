<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <meta name="description" content="@ViewBag.Description" />
    <link rel="canonical" href="https://realwheelsdavao.com/" />
    <link rel="next" href="https://realwheelsdavao.com/page/2/" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:url" content="https://realwheelsdavao.com/" />
    <meta property="og:site_name" content="Real Wheels Car Rental Davao" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:description" content="@ViewBag.Description" />
    <meta name="twitter:title" content="@ViewBag.Title" />
    <script type="text/javascript" src="~/Scripts/Modal.js"></script>

 
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css/DateRangePicker")

</head>
<body onresize="toggleScreen()" onload="toggleScreen()">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand" id="navbar-title">@ViewBag.NavBarTitle</a>
                @*@Html.ActionLink("AJ88", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "MepuMain")</li>*@
                    <li><a href="/">Home</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Control Panel", "Index", "Home")</li>
                        @*
                            <li>@Html.ActionLink("Jobs", "JobTable", "JobMains", new { span = 30 }, null)</li>
                            <li>@Html.ActionLink("Accounting", "Index", "AsMain", new { Area = "Accounting", span = 30 }, null)</li>
                        *@
                    }
                    <li>@Html.ActionLink("About", "About")</li>
                    <li>@Html.ActionLink("Contact", "Contact")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div id="overlay">
        <div class="overlay-msg">
            <div class="spinner"></div>
        </div>
    </div>

    <div id="overlay2">
        <div class="overlay-msg2">
            <div>
                <img src="~/Images/GIF/gif-sending-mail.gif" style="border-radius:250px;width:150px;"/>
                <br />
                <p  style="color:white;text-align:center;"> Please wait ... </p>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RealBreeze Travel & Tours, Davao Philippines 8000 </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DateRangePicker")

    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="https://cdn.ywxi.net/js/1.js" async></script>
    <script type="text/javascript" src="https://cdn.ywxi.net/js/1.js" async></script>

</body>
</html>
