@model IEnumerable<JobsV1.Models.CarRate>

<table class="table">

@foreach (var item in Model) {
    <tr>
        <td><span class="userLabel-lg1">Rate</span></td>
        <td>
            <span class="userRemarks">1-6 Days</span>
                <br />
            <span class="userData">
                @item.Daily.ToString("##,###")
            </span>
            </td>
        <td>
            <span class="userRemarks">7-21 Days</span>
            <br />
            <span class="userData">
                @item.Weekly.ToString("##,###")
            </span>
        </td>
        <td>
            <span class="userRemarks">22 and Above </span>
            <br />
            <span class="userData">
                @item.Monthly.ToString("##,###")
            </span>
            </td>
    </tr>

    <tr>
        <td class="userLabel-lg1">Time</td>
        <td colspan="2">
            <span class="userRemarks">
                Daily Usage</span>
                <br />
            <span class="userData">
                10 hours
            </span>
        </td>
        <td>
            <span class="userRemarks">
                Overtime rate
            </span>
            <br />
            <span class="userData">
                @item.OtRate.ToString("P##,###") per hr
            </span>
        </td>
    </tr>
    <tr>
        <td class="userLabel-lg1">Fuel</td>
        <td colspan="2">
            <span class="userRemarks">
                City Limits
            </span>
            <br />
            <span class="userData">
                Included
            </span>
        </td>
        <td>
            <span class="userRemarks">
                Out of town
            </span>
            <br />
            <span class="userData">
                Renter's fuel
            </span>
        </td>
    </tr>

    <tr><td colspan="4">
        @Html.ActionLink("Cost Estimate and Reservation", "Reservation", "CarRental", new { unitid = item.CarUnitId }, new { @class = "btn btn-primary" })
    </td></tr>
}
</table>
